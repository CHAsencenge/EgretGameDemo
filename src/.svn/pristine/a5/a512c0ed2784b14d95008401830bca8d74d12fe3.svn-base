		this._pic = UI.addPic(this, "lvl1_4_png", 330, 130, true);
		this._pic = UI.addPic(this, "lvl1_4_png", 15, 130, true);
		this._pic = UI.addPic(this, "lvl1_7_png", 241, 161, true);
